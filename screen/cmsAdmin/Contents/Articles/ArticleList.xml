<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.6.xsd"
	default-menu-title="CMS文章列表" default-menu-index="2" default-menu-include="false">
	<transition name="search">
		<default-response url="." />
	</transition>
	<actions>
		<entity-find entity-name="scs.cms.CmsArticle" list="articleList">
			<search-form-inputs default-order-by="^articleId" />
		</entity-find>

		<entity-find entity-name="scs.cms.CmsCategory" list="categoryList">
			
		</entity-find>

	</actions>
	<widgets>
		<container-box>
			<box-header>
				<container type="li" style="fa fa-edit" />
				<label text="文章列表" type="h5" style="box-title" />
			</box-header>
			<box-body>
				<form-single name="article" transition="search">

					<field name="title">
						<default-field title="标题：">
							<text-line size="30" />
						</default-field>
					</field>
					<field name="author">
						<default-field title="作者：">
							<text-line size="15" />
						</default-field>
					</field>
					<field name="statusId">
						<default-field title="状态：">
							<drop-down no-current-selected-key="1">
								<option key="1" text="发布" />
								<option key="2" text="停止发布 " />
							</drop-down>
						</default-field>
					</field>
					<field name="categoryId">
						<default-field title="类别：">
							<drop-down allow-empty="true">
								<list-options list="categoryList" key="${categoryId}" text="${categoryName}" />
							</drop-down>
						</default-field>
					</field>
					<field name="submitButton">
						<default-field title="提交">
							<submit />
						</default-field>
					</field>
					<field name="resetButton">
						<default-field title="重置">
							<reset />
						</default-field>
					</field>
					<field-layout>
						<field-row>
							<field-ref name="title" />
							<field-ref name="author" />
						</field-row>
						<field-row>
							<field-ref name="categoryId" />
							<field-ref name="statusId" />
						</field-row>
						<field-row>
							<field-ref name="submitButton" />
							<field-ref name="resetButton" />

						</field-row>

					</field-layout>
				</form-single>

			</box-body>

		</container-box>




		<container-box>
			<box-header></box-header>
			<box-body>
				<container>
					<link url="../NewArticle" text="新建文章" expand-transition-url="false" />
					<link url="../NewArticle" text="Get as PDF" target-window="_blank" />
				</container>
				<form-list name="articles" list="articleList">
					<field name="title">
						<default-field title="标题：">
							<text-line size="30" />
						</default-field>
					</field>
					<field name="author">
						<default-field title="作者：">
							<text-line size="15" />
						</default-field>
					</field>
				</form-list>
			</box-body>
		</container-box>

	</widgets>
</screen>